<h1>{{title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course title</label>
        <span class="helper-text" data-error="Title is required"></span>
    </div>

    <div class="input-field">
        <input name="price" id="price" type="text" class="validate" required value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Price is required"></span>
    </div>

    <div class="input-field">
        <input name="img" id="img" type="tel" class="validate" required value="{{course.img}}">
        <label for="img">URL icon</label>
        <span class="helper-text" data-error="Image is required"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}" />

    <button class="btn btn-primary">Accept edit</button>
</form>
